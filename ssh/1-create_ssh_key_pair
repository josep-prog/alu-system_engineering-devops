#!/usr/bin/env bash

# Ensure .ssh directory exists
mkdir -p ~/.ssh

# Check if the key already exists
if [ -f ~/.ssh/school ]; then
  echo "The 'school' key already exists. Skipping key creation."
else
  # Create the RSA key pair with 4096 bits and passphrase 'betty'
  ssh-keygen -t rsa -b 4096 -f ~/.ssh/school -N "betty"
  echo "SSH key pair created successfully."
fi
